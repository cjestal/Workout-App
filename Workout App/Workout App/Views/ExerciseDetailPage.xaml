<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_App.Views.ExerciseDetailPage"
             >
    <StackLayout Padding="20">
        <Label Text="Create Exercise" FontSize="Large" />
        <Entry Placeholder="Name" Keyboard="Numeric" />
        <Picker Title="Select Target" ItemsSource="{Binding TargetNames}" SelectedItem="{Binding SelectedTargetName}" />
        <Button Text="Save" Clicked="OnCloseButtonClicked" Background="DarkRed" />
        <Button Text="Close" Clicked="OnCloseButtonClicked" Background="white" TextColor="black" />
    </StackLayout>
</ContentPage>
    
    