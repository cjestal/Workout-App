<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_App.Views.LoginPage">
    
    <FlexLayout Padding="20" Direction="Column" >
        <BoxView HeightRequest="100" WidthRequest="100"/>
        <Label Text="Workout Tracker" FontAttributes="Bold"  FontSize="Title"/>
        <BoxView HeightRequest="50" WidthRequest="50"/>
        
        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Password" Keyboard="Default" />
        
        <BoxView HeightRequest="20" WidthRequest="20"/>

        <Button Text="Login" Command="{Binding LoginCommand}" Background="DarkRed" />
        <Button Text="Sign Up" Command="{Binding SignupCommand}" Background="white" TextColor="black" />

        <!--<StackLayout Orientation="Horizontal" Margin="0,20,0,20">
            <Button Text="Log Workout" Command="{Binding LogWorkoutCommand}" BackgroundColor="DarkRed" />
            <Button Text="View Progress" Command="{Binding ViewProgressCommand}" BackgroundColor="DarkRed" />
        </StackLayout>-->
        
    </FlexLayout>
</ContentPage>